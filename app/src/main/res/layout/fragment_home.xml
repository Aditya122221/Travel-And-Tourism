<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/ascentColor">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/llOne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/logo"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/brandName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/aclonica"
                    android:text="TripMate"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    app:layout_constraintLeft_toRightOf="@+id/logo"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageButton
                    android:id="@+id/search"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="32dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/baseline_search_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/svOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="50dp"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/svOneLLOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageButton
                    android:id="@+id/nextOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/baseline_arrow_right_alt_24"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <HorizontalScrollView
                    android:id="@+id/svTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nextOne">

                    <LinearLayout
                        android:id="@+id/svTwoLLOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/svTwoLLTwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/tripImageOne"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                app:srcCompat="@drawable/hawa_mahal" />

                            <TextView
                                android:id="@+id/tripTextOne"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Jaipur"
                                android:textSize="32sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/svTwoLLThree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/tripImageTwo"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                app:srcCompat="@drawable/hawa_mahal" />

                            <TextView
                                android:id="@+id/tripTextTwo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Jaipur"
                                android:textSize="32sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/svTwoLLFour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/tripImageThree"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                app:srcCompat="@drawable/hawa_mahal" />

                            <TextView
                                android:id="@+id/tripTextThree"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Jaipur"
                                android:textSize="32sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/svTwoLLFive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/tripImageFour"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                app:srcCompat="@drawable/hawa_mahal" />

                            <TextView
                                android:id="@+id/tripTextFour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Jaipur"
                                android:textSize="32sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/svTwoLLSix"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/tripImageFive"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                app:srcCompat="@drawable/hawa_mahal" />

                            <TextView
                                android:id="@+id/tripTextFive"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Jaipur"
                                android:textSize="32sp" />

                        </LinearLayout>
                    </LinearLayout>


                </HorizontalScrollView>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>